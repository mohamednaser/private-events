<h1>Event#index <%= link_to  "Create Event", events_new_path , class: "btn btn-primary"%>
<%= link_to  "My Profile", profile_path , class: "btn btn-primary"%>
</h1> 

<h3>Upcoming</h3>
<div class="events-holder">
    <% @events.upcoming.each do |event| -%>        
    <div class="card card-mb" style="width: 25%;">
      <img class="card-img-top" src="https://via.placeholder.com/180.png/09f/fff" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"> <%= event.title %> </h5>
        <p class="card-text"> description : <%= event.description %></p>
        <p class="card-text"> Event Date : <%= event.date %></p>
        <p class="card-text"> Number of attendees : <%= event.EventAttendance.count %></p>
        <p class="card-text"> created at : <%= event.created_at.to_date %></p>

       <%= link_to  "View", events_path + '/' + id_to_string(event) , class: 'btn btn-primary'%>
       <% if event.attend?(@curent_user.id) %> 
        <%= link_to  "Already Attended", '#' , class: 'btn btn-success'%> 
       <% else %>
        <%= link_to  "Attend", events_path + '/attend/' + id_to_string(event) , class: 'btn btn-primary'%> 
       <% end %> 

      </div>
    </div>

   <% end -%>
  </div>
</div>

  
<h3>Past</h3>
<div class="events-holder">
    <% @events.past.each do |event| -%>        
    <div class="card card-mb" style="width: 25%;">
      <img class="card-img-top" src="https://via.placeholder.com/180.png/09f/fff" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"> <%= event.title %> </h5>
        <p class="card-text"> description : <%= event.description %></p>
        <p class="card-text"> Event Date : <%= event.date %></p>
        <p class="card-text"> Number of attendees : <%= event_attendance_count(event)%></p>
        <p class="card-text"> created at : <%= event_date_format(event) %></p>

       <%= link_to  "View", events_path + '/' + id_to_string(event) , class: 'btn btn-primary'%>
       <% if event.attend?(@curent_user.id) %> 
        <%= link_to  "Already Attended", '#' , class: 'btn btn-success'%> 
       <% else %>
        <%= link_to  "Attend", events_path + '/attend/' + id_to_string(event) , class: 'btn btn-primary' , method: :post %> 
       <% end %> 

      </div>
    </div>

   <% end -%>
  </div>
</div>