<h1>Event#new</h1>

<%= form_with url: events_new_path , model: @event do |f| %>
    <div class="form-group">
        <%= f.label :title, "title:" %>
        <br>
        <%= f.text_field :title %>
    </div>
    <div class="form-group">
        <br>
        <%= f.label :description, "description : " %>
        <br>        
        <%= f.text_area :description %>
    </div>

    <%= f.submit "Save Event"%>
<% end %>

