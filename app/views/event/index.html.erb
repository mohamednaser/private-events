<h1>Event#index <%= link_to  "Create Event", events_new_path , class: "btn btn-primary"%>
<%= link_to  "My Profile", profile_path , class: "btn btn-primary"%>
</h1> 

<div class="events-holder">
    <% @events.each do |event| -%>        
    <div class="card card-mb" style="width: 25%;">
      <img class="card-img-top" src="https://via.placeholder.com/180.png/09f/fff" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"> <%= event.title %> </h5>
        <p class="card-text"> <%= event.description %></p>
        <p class="card-text"> Number of attendees : <%= event.EventAttendance.count %></p>
       <%= link_to  "View", events_path + '/' + event.id.to_s , class: 'btn btn-primary'%>
       <% if event.is_attend? %> 
        <%= link_to  "Already Attended", '#' , class: 'btn btn-success'%> 
       <% else %>
        <%= link_to  "Attend", events_path + '/attend/' + event.id.to_s , class: 'btn btn-primary'%> 
       <% end %> 

      </div>
    </div>

   <% end -%>
  </div>
  </div>
