<div class='signup-form'>

<h1> Signup</h1>
 <% flash.each do |type, msg| %>
<div class="alert alert-success" role="alert">
    <%= msg %>
  </div>
<% end %>
 <%= form_with(url: signup_path , model: @user) do |f| %>
  <div class="form-group">
    <%= f.label :name, "name:" , class: 'exampleInputEmail1'%>
    <%= f.text_field :name ,class: "form-control" %>
  </div> 
    <div class="form-group">
    <%= f.label :email, "email:" , class: 'exampleInputEmail1'%>
    <%= f.text_field :email ,class: "form-control" %>
  </div> 
 
    <%= f.submit "Register" , class: "btn btn-primary" , name: 'register'%>

</form>
<% end %>
 