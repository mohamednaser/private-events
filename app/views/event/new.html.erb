<h1>Event#new</h1>

<%= form_with url: events_new_path , model: @event do |f| %>
  <div class="form-group">
    <%= f.label :title, "title:" , class: 'exampleInputEmail1'%>
    <%= f.text_field :title ,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, "description:" , class: 'exampleInputEmail1'%>
    <%= f.text_area :description ,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :date, "description:" , class: 'exampleInputEmail1'%>
    <%= f.date_field :date , class: "form-control", value: DateTime.now.to_date %>
  </div>
    <%= f.submit "Save Event" , class: "btn btn-primary"%>

</form>
<% end %>